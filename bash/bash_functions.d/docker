dockerState()
{
    local name=$1
    local state
    state=$(docker inspect --format "{{.State.Running}}" "$name" 2>/dev/null)

    echo "$state"
}

stopIfRunning()
{
    local name=$1
    local state
    state=$(dockerState "$name")

    if [[ "$state" == "true" ]]
    then
        docker stop "$name"
        docker rm "$name"
    elif [[ "x$state"  != "x" ]]
    then
        docker rm "$name"
    fi

}

startJenkins()
{
    local LOCAL_PORT=${1:-49000}
    local name=jenkins

    stopIfRunning $name

    docker run -u root \
        --rm \
        -d \
        -p ${LOCAL_PORT}:8080 \
        -p 50000:50000 \
        -e JENKINS_OPTS="--prefix=/jenkins" \
        -v /opt/docker/jenkinsci:/var/jenkins_home \
        -v /var/run/docker.sock:/var/run/docker.sock \
        --name $name \
        jenkinsci/blueocean
}

startPihole()
{
    local IP=$(ifconfig en0 | grep 'inet\>' | awk '{ print $2 }')
    local IP_ADDRESS=${1:-$IP}
    local name=pihole
    stopIfRunning $name

    docker run -d --name $name \
        -e ServerIP=$IP_ADDRESS \
        -e TZ=New_York \
        -e WEBPASSWORD='no ads' \
        -e DNS1=1.1.1.1 -e DNS2=1.0.0.1 \
        -p 80:80 -p 53:53/tcp -p 53:53/udp -p 443:443 \
        -v ~/pihole/:/etc/pihole/ \
        --dns=127.0.0.1 --dns=1.1.1.1 \
        --cap-add=NET_ADMIN \
        --restart=unless-stopped \
        pihole/pihole:latest
}

sdr()
{
    docker run -ti \
        --device=/dev/bus/usb \
        sdr-base "$*"
}
rtl_433()
{
    docker run -ti \
        --device=/dev/bus/usb \
        --entrypoint=/usr/bin/rtl_433 \
        sdr "$*"
}

_jekky()
{
    local USER_UID=$(id -u)
    docker run --rm \
           --user "$(id -u)":"$(id -g)" \
           -p 4000:4000 \
           -e USER \
           -e GEM_HOME=/srv/jekyll/.gem \
           --volume="$PWD:/srv/jekyll" -it \
           jekky "$@"
}

mkpasswd()
{
    docker run -i busybox mkpasswd $*
}

bundle()
{
    _jekky bundle "$@"
}

jekyll()
{
    _jekky "jekyll $@"
}

php()
{
    local USER_UID=$(id -u)
    docker run --rm \
           --user "$(id -u)":"$(id -g)" \
           -p 4000:4000 \
           -e USER \
           --volume="$PWD:/app" -it \
           phpcli php "$@"
}

arc()
{
    local USER_UID=$(id -u)
    docker run --rm \
           --user "$(id -u)":"$(id -g)" \
           -p 4000:4000 \
           -e USER \
           --volume="$HOME/git/arcanist/bin:/app" -it \
           arcanist "$@"
}

