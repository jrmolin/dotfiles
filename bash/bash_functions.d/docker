nmap()
{
    docker run -it --rm --name nmappy \
        --user "$(id -u)":"$(id -g)" \
        -e USER \
        nmap $*
}

function workdir() {
    typeset count=$(wc -l ~/.workdir | awk '{ print $1 }' 2>/dev/null)
    typeset options=$(cat ~/.workdir 2>/dev/null)

    if [[ $count = 1 ]] ; then
        echo "only one option: going to $options"
        chdir $options
    else
        typeset choice=$(echo $options | gum choose | cut -d: -f1)

        if [[ -n $choice ]] ; then
            chdir "$choice"
        fi
    fi
}


