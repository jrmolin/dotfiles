
# docker tomfoolery
function newbox () {
docker run --name $1 --volumes-from=volume_container -it -v /var/run/docker.sock:/var/run/docker.sock -v "$(pwd):/opt/pwd" -e BOX_NAME=$1 nathanleclaire/devbox
}

### Added by the Heroku Toolbelt
enableHeroku() {
    if [ -d "/usr/local/heroki" ]; then
        export PATH="/usr/local/heroku/bin:$PATH"
    fi
}

root() {
    DIRECTORY=".git"
    ld=`pwd`
    until [ -d "$DIRECTORY" ]
    do
        pwd=`pwd`
        cd ..

        if [ "/" == "$pwd" ];
        then
            cd $ld
            echo "could not find $DIRECTORY directory in ancestry; staying put"
            break
        fi
    done
}

enableRvm() {
    export PATH="$PATH:$HOME/.rvm/bin" # Add RVM to PATH for scripting
}

#THIS MUST BE AT THE END OF THE FILE FOR SDKMAN TO WORK!!!
enableSdkman() {
    export SDKMAN_DIR="/Users/jmolinatto/.sdkman"
    [[ -s "/Users/jmolinatto/.sdkman/bin/sdkman-init.sh" ]] && source "/Users/jmolinatto/.sdkman/bin/sdkman-init.sh"
}

enableNvm() {
    export NVM_DIR="$HOME/.nvm"
    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
    [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
}

enableVirtualenv() {
    [[ -f "/usr/local/bin/virtualenvwrapper.sh" ]] && . "/usr/local/bin/virtualenvwrapper.sh"
}
