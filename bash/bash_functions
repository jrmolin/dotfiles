function bc2bc()
{
    local ibase=${1:- "A"}
    local obase=${2:- "A"}
    echo "ibase=${ibase};obase=${obase};$3" | bc
}

function dec2hex()
{
    bc2bc "A" "16" "$1"
}

function hex2dec()
{
    bc2bc "16" "A" "$1"
}

if [ -d "${HOME}/.bash_functions.d" ]
then
    for f in $(ls -1 ${HOME}/.bash_functions.d/*)
    do
        . $f
    done
fi

